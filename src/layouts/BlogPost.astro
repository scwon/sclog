---
import type { CollectionEntry } from 'astro:content';
import type { MarkdownHeading } from 'astro';
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import TableOfContents from '../components/blog/TableOfContents.astro';
import CodeBlock from '../components/blog/CodeBlock.astro';
import ProgressBar from '../components/blog/ProgressBar.astro';
import ScrollToTop from '../components/blog/ScrollToTop.astro';
import { getReadingTime } from '../utils/blog';

interface Props {
  post: CollectionEntry<'blog'>;
  headings?: MarkdownHeading[];
  rawBody?: string;
}

const { post, headings = [], rawBody } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags } = post.data;
const readingTime = getReadingTime(rawBody || post.body || '');

function formatDate(date: Date): string {
  return date.toLocaleDateString('ko-KR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage}
  type="article"
  publishedTime={pubDate}
  modifiedTime={updatedDate}
  tags={tags}
>
  <ProgressBar />
  <Header />
  <main class="container">
    <div class="content-grid">
      <article class="blog-post">
      <header class="post-header">
        {heroImage && (
          <img
            class="hero-image"
            src={heroImage}
            alt={title}
          />
        )}
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <time datetime={pubDate.toISOString()}>
            {formatDate(pubDate)}
          </time>
          <span class="reading-time">{readingTime}분 읽기</span>
          {updatedDate && (
            <span class="updated">
              (수정: <time datetime={updatedDate.toISOString()}>
                {formatDate(updatedDate)}
              </time>)
            </span>
          )}
        </div>
        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <a href={`/blog/tags/${tag}`} class="tag">
                #{tag}
              </a>
            ))}
          </div>
        )}
      </header>

      <div class="post-content">
        <slot />
      </div>
    </article>
    <aside class="toc-sidebar">
      <TableOfContents headings={headings} />
    </aside>
    </div>
  </main>
  <CodeBlock />
  <ScrollToTop />
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 1025px) {
    .content-grid {
      grid-template-columns: 1fr 220px;
    }
  }

  .toc-sidebar {
    display: none;
  }

  @media (min-width: 1025px) {
    .toc-sidebar {
      display: block;
    }
  }

  .blog-post {
    background: var(--color-bg);
    border-radius: var(--radius-card);
    padding: 2rem;
  }

  .post-header {
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 1.5rem;
  }

  .hero-image {
    width: 100%;
    border-radius: var(--radius-card);
    margin-bottom: 1.5rem;
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
    line-height: 1.2;
    color: var(--color-text);
  }

  .post-meta {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .reading-time {
    margin-left: 0.75rem;
  }

  .reading-time::before {
    content: '·';
    margin-right: 0.75rem;
  }

  .updated {
    margin-left: 0.5rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    background: var(--color-primary);
    color: #fff;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-tag);
    font-size: 0.875rem;
    transition: opacity 0.2s;
  }

  :global(.dark) .tag {
    color: #1a1a1a;
  }

  .tag:hover {
    opacity: 0.9;
    text-decoration: none;
  }

  .post-content {
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .post-content :global(h2) {
    font-size: 1.75rem;
  }

  .post-content :global(h3) {
    font-size: 1.4rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(pre) {
    background: #1e1e1e;
    border-radius: var(--radius-card);
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }

  .post-content :global(code) {
    font-size: 0.9em;
  }

  .post-content :global(:not(pre) > code) {
    background: var(--color-border);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-button);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .post-title {
      font-size: 1.75rem;
    }

    .blog-post {
      padding: 1rem;
    }
  }
</style>
